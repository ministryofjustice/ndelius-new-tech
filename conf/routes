# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /healthcheck                                controllers.UtilityController.healthcheck
GET     /utility/searchDb                           controllers.UtilityController.searchDb
GET     /utility/searchLdap                         controllers.UtilityController.searchLdap

GET     /analytics                                  controllers.AnalyticsController.index
GET     /analytics/pageVisits                       controllers.AnalyticsController.pageVisits
GET     /analytics/recent/:limit                    controllers.AnalyticsController.recentEvents(limit: Integer)

GET     /nationalSearch                             controllers.NationalSearchController.index(user: String, t: String)
+ nocsrf
POST    /nationalSearch/recordSearchOutcome         controllers.NationalSearchController.recordSearchOutcome
GET     /searchOffender/:searchTerm                 controllers.NationalSearchController.searchOffender(searchTerm, pageSize: Int ?=10, pageNumber: Int ?=1)
GET     /nationalSearch/analytics                   controllers.NationalSearchAnalyticsController.index
GET     /nationalSearch/analytics/visitCounts       controllers.NationalSearchAnalyticsController.visitCounts(from: String ?= null)
GET     /feedback                                   controllers.FeedbackController.viewFeedback

GET     /offender/oneTimeNomisRef/:reference/image  controllers.OffenderController.image(reference: String)

GET     /report/shortFormatPreSentenceReport        controllers.ShortFormatPreSentenceReportController.wizardGet
POST    /report/shortFormatPreSentenceReport        controllers.ShortFormatPreSentenceReportController.wizardPost
POST    /report/shortFormatPreSentenceReport/save   controllers.ShortFormatPreSentenceReportController.reportPost

POST    /report/shortFormatPreSentenceReport/feedback   controllers.ShortFormatPreSentenceReportController.feedbackPost

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                           controllers.Assets.versioned(path="/public", file: Asset)
->      /webjars                                webjars.Routes
